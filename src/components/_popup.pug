    // ПОПАП "ОТПРАВИТЬ РЕЗЮМЕ"
    #popup-send-cv.popup
        .popup-title Отправить резюме
        form
            .form-row
                input(type="text" name="popup-send-cv_name" placeholder="Имя")
            .form-row
                input.phone-mask(type="tel" name="popup-send-cv_phone" placeholder="Телефон*")
            .form-row
                input(type="email" name="popup-send-cv_email" placeholder="E-mail")
            .form-row
                input(type="text" name="popup-send-cv_job" placeholder="Желаемая должность*")
            .form-row
                textarea(placeholder="Дополнительная информация")
            .form-row.upload-file

                input#upload-photo(type="file" name="file" class="inputfile")
                label(for="upload-photo")
                    .upload-icon
                        +img('icon_paper-clip.svg')
                    span.upload Загрузить резюме
                    span.format pdf, doc, docx, txt
            .form-action
                button.btn.btn--yellow(type="submit" data-src="#popup-success-cv" data-fancybox) Отправить
                p Нажимая на кнопку, вы соглашаетесь на обработку персональных данных и с публичной офертой

